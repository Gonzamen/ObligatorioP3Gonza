<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Obligatorio</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>                <div>
                    <a class="navbar-left" href="@Url.Action("Index", "Home")">
                        <img src="~/Content/miVac.png" alt="Site Logo" style="height:50px;" />
                    </a>
                </div>
            </div>
            @if (Session["logueadocedula"] != null)
            {
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                        <li>@Html.ActionLink("Importar", "Index", "Importacion")</li>
                        <li>@Html.ActionLink("Registro Prestador", "Register", "Prestador")</li>
                        <li>@Html.ActionLink("Filtrar Vacunas", "Filter", "Vacunas")</li>
                        <li>@Html.ActionLink("Salir", "Exit", "Usuario")</li>
                    </ul>
                </div>
            }
            else
            {
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                        <li>@Html.ActionLink("Importar", "Index", "Importacion")</li>
                        <li>@Html.ActionLink("Registrarse", "Register", "Usuario")</li>
                        <li>@Html.ActionLink("Iniciar Sesion", "Login", "Usuario")</li>
                    </ul>
                </div>
            }
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Obligatorio</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
